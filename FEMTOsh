while read comando datos
do
	eval "$comando $datos 2> $dir_actual/errores"
	if [[ $? -ne 0 ]]; then
		if [[ -d "$dir_actual/exe" ]]; then #revisa si el usuario ya creÃ³ algÃºn ejecutable
			estaComando=0
			exes=( `ls "$dir_actual/exe" 2> $dir_actual/errores` )
			for i in ${exes[@]}; do
				if [ "$comando" == "$i" ]; then
					estaComando=1
					source "$dir_actual/exe/$comando" $datos
					break
				fi
			done
			if [[ estaComando -eq 0 ]]; then
				echo "Comando Â«${comando}Â» no reconocido. Utilice Â«ayudaÂ» para obter los comandos reconocidos"
			fi
		else
			echo "Comando Â«${comando}Â» no reconocido. Utilice Â«ayudaÂ» para obter los comandos reconocidos"
		fi
	fi
	if [[ -e errores ]]; then
		rm errores
	fi
	escribir negrita azul "ğŠ‡ğŒ´ğŠğŠ—ğŠ’Â·âˆ«h â‰¡ "
	escribir negrita verde "`pwd`" 
	escribir negrita blanco " â© "
done